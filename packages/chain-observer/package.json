{
  "name": "@attestia/chain-observer",
  "version": "0.2.0",
  "description": "Multi-chain read-only observation layer for Attestia",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./evm": {
      "import": "./dist/evm/index.js",
      "types": "./dist/evm/index.d.ts"
    },
    "./xrpl": {
      "import": "./dist/xrpl/index.js",
      "types": "./dist/xrpl/index.d.ts"
    },
    "./solana": {
      "import": "./dist/solana/index.js",
      "types": "./dist/solana/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "attestia",
    "observer",
    "multi-chain",
    "ethereum",
    "xrpl",
    "solana",
    "read-only"
  ],
  "author": "mcp-tool-shop-org",
  "license": "MIT",
  "dependencies": {
    "@attestia/types": "workspace:*",
    "@solana/web3.js": "^1.98.4",
    "viem": "^2.0.0",
    "xrpl": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
