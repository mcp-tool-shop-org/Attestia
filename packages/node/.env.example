# =============================================================================
# Attestia Node — Configuration
# =============================================================================
# Copy to .env and adjust values for your environment.

# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info                # fatal | error | warn | info | debug | trace
NODE_ENV=development          # development | production | test

# Auth — API keys (comma-separated key:role:tenantId entries)
# Example: sk-abc123:admin:tenant-1,sk-def456:operator:tenant-2
API_KEYS=dev-key:admin:default

# JWT (optional — used when Authorization: Bearer is provided)
# JWT_SECRET=your-hmac-secret-here
# JWT_ISSUER=attestia

# Domain defaults
DEFAULT_CURRENCY=USDC
DEFAULT_DECIMALS=6

# Rate limiting
RATE_LIMIT_RPM=100            # Requests per minute per API key
RATE_LIMIT_BURST=20           # Burst capacity above limit

# XRPL Witness (optional — set WITNESS_ENABLED=true to activate)
WITNESS_ENABLED=false
# WITNESS_URL=wss://s.altnet.rippletest.net:51233
# WITNESS_SECRET=sXXXXXXXXXXXXXXXXXXXXXXXX
# WITNESS_ADDRESS=rXXXXXXXXXXXXXXXXXXXXXXXXX

# Idempotency
IDEMPOTENCY_TTL_MS=86400000  # 24 hours
